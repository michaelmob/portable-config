" vim: ts=2 sw=2 et
" init.nvim

let $SITEDIR = $HOME . '/.local/share/nvim/site'

if empty(glob($SITEDIR . '/autoload/plug.vim'))
  let plugurl = 'https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'
  silent execute '!wget -P ' . $SITEDIR . '/autoload ' . plugurl
  autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif

call plug#begin($SITEDIR . '/plugged')
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-eunuch'
Plug 'chrisbra/Recover.vim'
Plug 'wellle/targets.vim'
Plug 'terryma/vim-expand-region'
Plug 'easymotion/vim-easymotion'
Plug 'junegunn/vim-easy-align'
call plug#end()

syntax on
colorscheme slate

set number
set title
set paste
set modeline
set nowrap
set autoindent

call mkdir($SITEDIR . '/undodir', 'p', 0700)
call mkdir($SITEDIR . '/swap', 'p', 0700)
set directory=$SITEDIR/swap
set undodir=$SITEDIR/undodir
set undofile

let mapleader = ' '

map E gT
map R gt
map L g_
map H g0

map <Leader>h <Esc><C-w>h
map <Leader>j <Esc><C-w>j
map <Leader>k <Esc><C-w>k
map <Leader>l <Esc><C-w>l

map <C-h> <Esc><C-w>h
map <C-j> <Esc><C-w>j
map <C-k> <Esc><C-w>k
map <C-l> <Esc><C-w>l

map ZA :qa<CR>
map <C-e> +
nmap <Leader>w :w<CR>
nmap S viwS

map s <Plug>(easymotion-s2)
map gl <Plug>(easymotion-bd-jk)
map gw <Plug>(easymotion-bd-w)

map ga <Plug>(EasyAlign)
map gat gaip*\|

silent file
